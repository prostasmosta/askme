<div class="container">
    <h2 class="title-lg mb">Вопрос <%= @question.id %></h2>

    <p class="mb-sm"><%= @question.body %></p>
    <p>user_id: <b><%= @question.user_id %></b></p>

    <div class="mt">
      <%= link_to fa_icon('pencil'), edit_question_path(@question), title: 'Изменить вопрос', class: 'mr-sm' %>
      <%= button_to fa_icon('trash-o'), question_path(@question), method: :delete,
                    form: { data: { turbo_confirm: "Are you sure?" } }, title: 'Удалить вопрос', class: 'mr-sm' %>
      <% unless @question.hidden? %>
      <%= button_to fa_icon('eye-slash'), hide_question_path(@question), method: :put,
                    title: 'Скрыть вопрос', class: 'mr-sm' %>
      <% end %>
    </div>
    <p class="mt"><%= link_to "Все вопросы", questions_path %></p>
</div>
