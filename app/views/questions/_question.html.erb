<% if question.errors.any? %>
  <div class="mt">
    <% question.errors.full_messages.each do |message| %>
      <p class="mb-sm text-red"><%= message %></p>
    <% end %>
  </div>
<% end %>

<div class="mb-sm">
  <%= simple_format(question.body) %>
</div>

<div class="text-sm question-footer">
  <div class="text-grey">
    <%= l(question.created_at, format: :short) %>
  </div>

  <div>
    <%= link_to fa_icon('pencil'), edit_question_path(question), title: 'Изменить вопрос' %>
    <%= button_to fa_icon('trash-o'), question_path(question), method: :delete,
                  form: { data: { turbo_confirm: "Are you sure?" } }, title: 'Удалить вопрос' %>
    <% unless question.hidden? %>
    <%= button_to fa_icon('eye-slash'), hide_question_path(question), method: :put, title: 'Скрыть вопрос' %>
    <% end %>
  </div>
</div>
